header.header 
    .header-top
        .container 
            a(href="/").logo-wrap 
                .logo-img
                    include ../../img/logo/logo-img1.svg
                    include ../../img/logo/logo-img2.svg
                    include ../../img/logo/logo-img3.svg
                .logo-text HOTEL
            button#mobile-menu-open
                i.bx.bx-menu
            .header-navigation 
                nav
                    ul.header-navigation__list
                        li.header-navigation__item
                            a(href="#") Home
                        li.header-navigation__item
                            a(href="#") Branch
                        li.header-navigation__item
                            a(href="#") Search
                        li.header-navigation__item
                            a(href="#") About Us
                        li.header-navigation__item
                            a(href="#") Pages
                        li.header-navigation__item
                            a(href="#") Blog
                button#btn-reservation.btn-reservation.btn Reservation
