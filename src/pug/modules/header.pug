                                    include ../../img/header-slider/llline2.svg
                                .heaader-slider__item.swiper-slide
                                    include ../../img/header-slider/llline3.svg
                                .heaader-slider__item.swiper-slide
                                    include ../../img/header-slider/llline4.svg
                                .heaader-slider__item.swiper-slide
                                    include ../../img/header-slider/llline5.svg
