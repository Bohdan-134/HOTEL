        .container
            .header-content__left
                h1.title-text Discover a hotel that defies a new dimension of luxury.
                p.header-text Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy.
                .btn-watch-video__wrap
                    button#btn-get-started.btn Get Started
                    a(href="#").btn-play-video
                        .btn-watch-video__img
                            include ../../img/icons/play.svg
                        .btn-watch-video__text Watch video
            .header-content__right
                .header-content__right-bg
                    .header-main__circle-s.header-main__circle
                    .header-main__circle-m.header-main__circle
                    .header-main__circle-l.header-main__circle
                    .header-main__circle-xl.header-main__circle
                    .header-content__right-info
                        .header-content__right-info-img
                            include ../../img/icons/payment.svg
                        h4.header-content__right-info-title Payment
                        p.header-content__right-info-text on onternet
                    .header-slider__wrap 
                        .heaader-slider__tag 
                            span Market Static
                        .heaader-slider__text Course overview
